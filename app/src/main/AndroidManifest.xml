<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ac.ritsumei.creditapp.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.ac.ritsumei.creditapp.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="jp.ac.ritsumei.creditapp.main.CreditRegistrationActivity" android:label="@string/app_name"/>
        <activity android:name="jp.ac.ritsumei.creditapp.main.SettingActivity" android:label="@string/app_name"/>
        <activity android:name="jp.ac.ritsumei.creditapp.main.TimetableActivity" android:label="@string/app_name"/>
        <activity android:name="jp.ac.ritsumei.creditapp.main.TimetableRegistrationPresentActivity" android:label="@string/app_name" />
        <activity android:name="jp.ac.ritsumei.creditapp.main.TimetableRegistrationActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow"
            android:theme="@style/Theme.AppCompat.Light"
            />
    </application>


</manifest>
